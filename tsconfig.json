{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "strictNullChecks": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "paths": {
            "@routes/*": ["src/routes/*"],
            "@controllers/*": ["src/controllers/*"],
            "@logger": ["src/logger.ts"],
        }
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*"]
}